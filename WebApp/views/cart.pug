extends layout

block content
    if(cart)
        for item in cart.items
            div(class="item")
                h3=item.title
                h4="$" + item.unitPrice
                form
                    label="Quantity: "
                    input(type="number" id="quantity" name="quantity" min="1" value=item.quantity)
                    input(type="submit")
                h5="$" + item.totalPrice
                button="Remove from cart"
        h2="$" + cart.total
        button="Checkout"
    else
        h2="Your cart is currently empty"
        a(href="/")
            button="Go to store"